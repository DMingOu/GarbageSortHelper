<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android = "http://schemas.android.com/apk/res/android"
xmlns:app = "http://schemas.android.com/apk/res-auto"
android:id="@+id/rv_camera"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

        <TextureView
        android:id="@+id/previewContainer"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent"
        />

        <Button
        android:id="@+id/btnCapture"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/camera_2"
        android:layout_alignBottom="@id/previewContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:visibility="invisible"
        android:transitionName="@string/share_view_button_camera"
        />


        <com.example.odm.garbagesorthelper.widget.FocusCircleView
        android:id="@+id/focusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    </RelativeLayout>