<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.odm.garbagesorthelper.ui.search.SearchViewModel" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.example.odm.garbagesorthelper.widget.ClearEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="40dp"
            android:gravity="center|start"
            android:hint="@string/searchview_hint"
            android:textSize="18sp"
            android:drawableStart="@drawable/module_search_edittext_left_icon"
            android:background="@drawable/module_search_edittext_background"
            android:drawablePadding="20dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:text="@={viewModel.garbageName}"
            app:checkNewStringValue="@{viewModel.garbageName}"
            />

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpenCamera"
            android:background="@drawable/module_search_open_camera"
            app:sb_shape_type="rectangle"
            android:layout_marginStart="5dp"
            android:layout_below="@id/etSearch"
            android:onClick="@{()->viewModel.openCamera()}"
            />


    </RelativeLayout>
</layout>