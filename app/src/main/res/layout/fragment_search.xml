<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.odm.garbagesorthelper.ui.search.SearchViewModel" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.stx.xhb.androidx.XBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="100dp"
        app:AutoPlayTime="3000"
        app:pointsContainerBackground="#44aaaaaa"
        app:pointNormal="@drawable/module_search_shape_banner_normal_point"
        app:pointSelect="@drawable/module_search_shape_banner_selected_point"
        app:pointsPosition="CENTER"
        app:isClipChildrenMode="true"
        app:tipTextSize="0sp"
        app:isShowNumberIndicator="false"
        app:isShowIndicatorOnlyOne="true"
        app:pageChangeDuration="800"
        />

        <com.example.odm.garbagesorthelper.widget.ClearEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="40dp"
            android:gravity="center|start"
            android:hint="@string/searchview_hint"
            android:textSize="18sp"
            android:drawableStart="@drawable/module_search_edittext_left_icon"
            android:background="@drawable/module_search_edittext_background"
            android:drawablePadding="20dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:text="@={viewModel.garbageName}"
            app:checkNewStringValue="@{viewModel.garbageName}"
            />

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpenCamera"
            android:background="@drawable/module_search_open_camera"
            app:sb_shape_type="rectangle"
            android:layout_marginStart="10dp"

            android:layout_below="@id/etSearch"
            android:onClick="@{()->viewModel.openCamera()}"
            />
        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpenRecorder"
            android:background="@drawable/module_search_open_recorder"
            app:sb_shape_type="rectangle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/etSearch"
            android:layout_toEndOf="@id/btnOpenCamera"
            android:onClick="@{()->viewModel.openRecorder()}"
        />


    </RelativeLayout>
</layout>