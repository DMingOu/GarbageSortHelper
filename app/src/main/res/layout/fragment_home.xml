<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app = "http://schemas.android.com/apk/res-auto"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical"
        android:splitMotionEvents="false"
        android:fitsSystemWindows="true">


        <com.example.odm.garbagesorthelper.widget.ClearEditText
        android:id = "@+id/etSearch"
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/dp_50"
        android:layout_margin = "@dimen/dp_30"
        android:background = "@drawable/module_search_edittext_background"
        android:drawableStart = "@drawable/module_search_edittext_left_icon"
        android:drawablePadding = "@dimen/dp_15"
        android:gravity = "center|start"
        android:hint = "@string/searchview_hint"
        android:imeOptions = "actionSearch"
        android:inputType = "text"
        android:singleLine = "true"
        android:textSize = "@dimen/sp_18"
        android:focusable="false"

        />

        <com.stx.xhb.androidx.XBanner
        android:id = "@+id/banner"
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/dp_200"
        android:layout_below="@id/etSearch"
        android:layout_marginTop = "@dimen/dp_20"
        app:AutoPlayTime = "3000"
        app:isClipChildrenMode = "true"
        app:isShowIndicatorOnlyOne = "true"
        app:isShowNumberIndicator = "false"
        app:pageChangeDuration = "800"
        app:pointNormal = "@drawable/module_search_shape_banner_normal_point"
        app:pointSelect = "@drawable/module_search_shape_banner_selected_point"
        app:pointsContainerBackground = "#44aaaaaa"
        app:pointsPosition = "CENTER"
        />

        <RelativeLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below="@id/banner"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/module_home_button_background">

                <Button
                android:id = "@+id/btnOpenCamera"
                android:layout_width = "@dimen/dp_120"
                android:layout_height = "@dimen/dp_120"
                android:layout_marginStart = "@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:background = "@drawable/camera_2"
                />

                <Button
                android:id = "@+id/btnOpenRecorder"
                android:layout_width = "@dimen/dp_110"
                android:layout_height = "@dimen/dp_110"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginStart = "@dimen/dp_10"
                android:layout_marginEnd = "@dimen/dp_20"
                android:layout_centerVertical="true"

                android:background = "@drawable/microphone_1"
                />

        </RelativeLayout>





</RelativeLayout>