<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_Camera"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextureView
            android:id="@+id/containerCamera"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent"
            />

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:id="@+id/btnCamera"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:background="@drawable/camera_2"
            android:layout_alignBottom="@id/containerCamera"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:visibility="invisible"
            app:sb_shape_type="round"
            android:transitionName="@string/share_view_button_camera"
        />


        <com.example.odm.garbagesorthelper.widget.FocusCircleView
            android:id="@+id/focusCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>
